@model Biblioteca_Reges.Models.Leitor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizar Detalhes do Leitor";
}

<!DOCTYPE html>

<div class="=panel panel-primary">
    <div class="panel-heading">
        Visualizar detalhes do Leitor
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(Model => Model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.LeitorId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>
