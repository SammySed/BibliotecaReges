@model IEnumerable<Biblioteca_Reges.Models.Bibliotecario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Bibliotecarios";
}

<!DOCTYPE html>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Bibliotecarios registrados
    </div>
    <div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BibliotecarioId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.telefone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.documento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.pis)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.salario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.logradouro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cidade)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BibliotecarioId)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.nome)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.telefone)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.documento)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.pis)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.salario)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.logradouro)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.cidade)
                            </td>
                            <td>
                                @Html.ActionLink("Alterar", "Edit", new { id = item.BibliotecarioId })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.BibliotecarioId })
                                @Html.ActionLink("Apagar", "Delete", new { id = item.BibliotecarioId })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="panel-footer panel-info">
            @Html.ActionLink("Inserir Novo Bibliotecario", "Create", null, new { @class = "btn btn-successs" })
        </div>
    </div>
    @section styles{
        <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
    }

    @section ScriptPage{
        <script src="~/scripts/DataTables/jquery.dataTables.js"></script>
        <script src="~/scripts/DataTables/dataTables.bootstrap.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.table').dataTable({ "order": [[1, "asc"]] });
            });
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('li').removeClass("active");
                $('#liBibliotecario').addClass("active");
            });
        </script>
    }
</div>
