@model Biblioteca_Reges.Models.Bibliotecario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Apagar Bibliotecario";
}

<!DOCTYPE html>

<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do Biblioterario a ser Removido
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.nome, new

           { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Bibliotecario"
                   class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
        }
    </div>
</div>



