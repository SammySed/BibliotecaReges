@model Biblioteca_Reges.Models.Livro

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizar Detalhes do Livro";
}

<!DOCTYPE html>

<div class="=panel panel-primary">
    <div class="panel-heading">
        Visualizar detalhes do Livro
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(Model => Model.nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.LivroId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>


